NODE_ENV=development
PORT=5000

# Frontend URL for CORS - comma-separated list of allowed origins
# Wildcards like https://*.vercel.app are supported
# First value is used for email links
CLIENT_ORIGIN=http://localhost:5173

# Database connection string
# For local MySQL: mysql://user:password@localhost:3306/dbname
# For Aiven: mysql://avnadmin:PASSWORD@HOST:PORT/defaultdb?ssl-mode=REQUIRED
DATABASE_URL=

# Optional: Path to SSL certificate for database (Aiven)
DB_SSL_CA_PATH=certs/aiven-ca.pem

# JWT secrets - MUST be different in production
# Generate strong secrets: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=change-me
JWT_REFRESH_SECRET=change-me-too
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password hashing rounds (higher = more secure but slower)
PASSWORD_SALT_ROUNDS=12

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# Firebase Storage credentials (get from Firebase Console)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_STORAGE_BUCKET=

# RSA key configuration for AES key wrapping
# Option 1: Use key files (recommended for local development)
RSA_PRIVATE_KEY_PATH=keys/private.pem
RSA_PUBLIC_KEY_PATH=keys/public.pem

# Option 2: Inline keys (for cloud deployment like Render)
# Generate with: node scripts/generateKeys.js
RSA_PRIVATE_KEY=
RSA_PUBLIC_KEY=

# Audit logging
# 1 = log all requests, 0.1 = log 10% of requests (for high-traffic production)
AUDIT_LOG_SAMPLING_RATE=1
